@page "/login"
@page "/"

@inject NavigationManager NavigationManager

<PageTitle>Login Sample</PageTitle>
<div class="row">
    <div class="col-12 col-lg-2 col-xl-3">
    </div>
    <div class="col-12 col-lg-6 col-xl-5">
        <main class="form-signin w-100 m-auto">
            <form>
                <img class="mb-4" src="https://cdn-icons-png.flaticon.com/512/1092/1092848.png" alt="" height="120">
                <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

                <div class="form-floating">
                    <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                    <label for="floatingInput">Enter any email address</label>
                </div>
                <div class="form-floating mt-3">
                    <input type="password" class="form-control" id="floatingPassword" placeholder="Password">
                    <label for="floatingPassword">Enter some password</label>
                </div>

                <div class="checkbox mb-3 mt-2">
                    <label>
                        <input type="checkbox" value="remember-me"> Remember me
                    </label>
                </div>
                <button class="w-100 btn btn-lg btn-primary" type="button" @onclick="IncrementCount">Sign in</button>
                <p class="mt-5 mb-3 text-muted">© 2017–2022</p>
            </form>
        </main>

    </div>
    <div class="col-12 col-lg-4">
    </div>
</div>

@code {
    private void IncrementCount()
    {
        NavigationManager.NavigateTo("counter");
    }
}
